py_binary(
    name = "gd_demo",
    srcs = ["demo/gd_demo.py"],
    deps = [":rocnnet_py"],
    data = glob(["pretrained/*"]),
)

py_binary(
    name = "dqn_demo",
    srcs = ["demo/dqn_demo.py"],
    deps = [":rocnnet_py"],
    data = glob(["pretrained/*"]),
)

py_binary(
    name = "slow_dqn_demo",
    srcs = ["demo/slow_dqn_demo.py"],
    deps = [":rocnnet_py"],
    data = glob(["pretrained/*"]),
)

py_binary(
    name = "rbm_demo",
    srcs = glob(["demo/data/*.py"]) + ["demo/rbm_demo.py"],
    deps = [":rocnnet_py"],
    data = glob(["pretrained/*"]),
)

