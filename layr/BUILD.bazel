licenses(["notice"])

load("//third_party/drake_rules:pybind.bzl", "pybind_library")

package(
    default_visibility = ["//visibility:public"],
)

filegroup(
    name = "srcs",
    srcs = glob([
        "*.hpp",
        "src/*.cpp",
    ]) + ["BUILD.bazel"],
)

filegroup(
    name = "test_srcs",
    srcs = glob([
        "test/*.hpp",
        "test/*.cpp",
    ]),
)

######### LIBRARY #########

cc_library(
    name = "layr",
    hdrs = glob([
        "*.hpp",
        "trainer/*.hpp",
    ]),
    srcs = glob(["src/*.cpp"]),
    copts = ["-std=c++17"],
    deps = ["//eteq:eteq"],
)

pybind_library(
    name = "layr_py",
    cc_srcs = ["//layr:python/layr.cpp"],
    cc_deps = [
        "//layr:layr",
        "//pyutils:pyutils",
    ],
    visibility = ["//visibility:public"],
)

######### TEST #########

cc_test(
    name = "test",
    srcs = ["//layr:test_srcs"],
    copts = ["-std=c++17"],
    deps = [
        "//layr:layr",
        "//dbg:stream_out",
        "//testutil:tutil",
        "@com_github_mingkaic_cppkg//diff:diff",
    ],
    linkstatic = True,
)
