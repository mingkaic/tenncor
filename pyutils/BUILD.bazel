pybind_library(
    name = "pyutils",
    hdrs = glob(["*.hpp"]),
    srcs = glob(["src/*.cpp"]),
    copts = ["-std=c++17"],
    deps = ["//teq:teq"],
    visibility = ["//visibility:public"],
)
