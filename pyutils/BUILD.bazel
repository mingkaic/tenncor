licenses(["notice"])

load("@com_github_pybind_bazel//:build_defs.bzl", "pybind_library")

filegroup(
    name = "srcs",
    srcs = glob(["*.hpp", "src/*.cpp"]) + [
        "BUILD.bazel",
    ],
    visibility = ["//visibility:public"],
)

