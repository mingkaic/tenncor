licenses(["notice"])

filegroup(
    name = "srcs",
    srcs = [
        ":opt_hdrs",
        ":opt_srcs",
        "BUILD.bazel",
    ],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "opt_hdrs",
    srcs = glob(["*.hpp"]),
)

filegroup(
    name = "opt_srcs",
    srcs = glob(["src/*.cpp"]),
)

