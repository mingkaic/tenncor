cc_library(
    name = "opt",
    hdrs = [":opt_hdrs"],
    srcs = [":opt_srcs"],
    copts = ["-std=c++17"],
    deps = [
        "//internal/opt:opt",
        "//tenncor/eteq:eteq",
    ],
    visibility = ["//visibility:public"],
)
