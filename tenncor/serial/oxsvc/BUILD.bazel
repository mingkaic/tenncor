#     visibility = ["//visibility:public"],
# )

cc_library(
    name = "oxsvc_cc_grpc",
    hdrs = [
        "distr.ox.pb.h",
        "distr.ox.grpc.pb.h",
    ],
    srcs = [
        "distr.ox.pb.cc",
        "distr.ox.grpc.pb.cc",
    ],
    deps = [
        "//internal/onnx:onnx_cc_pb",
        "//tenncor/eteq/opsvc:opsvc_cc_grpc",
        "@com_github_grpc_grpc//:grpc++",
    ],
    visibility = ["//visibility:public"],
)

