licenses(["notice"])

load("@rules_proto_grpc//cpp:defs.bzl", "cpp_grpc_library")

filegroup(
    name = "srcs",
    srcs = [
        ":oxsvc_hdrs",
        ":oxsvc_srcs",
        ":protos",
        ":test_srcs",
        "BUILD.bazel",
    ],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "oxsvc_hdrs",
    srcs = glob(["*.hpp"]),
)

filegroup(
    name = "oxsvc_srcs",
    srcs = glob(["src/*.cpp"]),
)

filegroup(
    name = "protos",
    srcs = glob(["*.proto"]),
)

filegroup(
    name = "test_srcs",
    srcs = glob(["test/*.cpp"]),
)

######### LIBRARY #########

cc_library(
    name = "oxsvc",
    hdrs = [":oxsvc_hdrs"],
    srcs = [":oxsvc_srcs"],
    copts = ["-std=c++17"],
    deps = [
        ":oxsvc_cc_grpc",
        "//tenncor/serial:serial",
        "//tenncor/distr:distr",
    ],
    visibility = ["//visibility:public"],
)

proto_library(
    name = "oxsvc_pb",
    srcs = [":protos"],
    deps = [
        "//internal/onnx:onnx_pb",
        "//tenncor/distr/iosvc:iosvc_pb",
    ],
    visibility = ["//visibility:public"],
)

