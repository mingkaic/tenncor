licenses(["notice"])

filegroup(
    name = "srcs",
    srcs = [
        ":hone_hdrs",
        ":hone_srcs",
        "BUILD.bazel",
    ],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "hone_hdrs",
    srcs = glob(["*.hpp"]),
)

filegroup(
    name = "hone_srcs",
    srcs = glob(["src/*.cpp"]),
)

filegroup(
    name = "ctest_srcs",
    srcs = glob(["test/*.cpp"]),
)

######### LIBRARY #########

cc_library(
    name = "hone",
    hdrs = [":hone_hdrs"],
    srcs = [":hone_srcs"],
    copts = ["-std=c++17"],
    deps = [
        "//internal/opt:opt",
        "//tenncor/eteq:eteq",
    ],
    visibility = ["//visibility:public"],
)

######### TEST #########

cc_test(
    name = "ctest",
    srcs = [":ctest_srcs"],
    copts = ["-std=c++17"],
    deps = [
        "//tenncor:tenncor",
        "//internal/utils:utils",
        "//testutil:tutil",
        "@com_github_mingkaic_cppkg//diff:diff",
        "@com_github_mingkaic_cppkg//exam:exam",
    ],
    linkstatic = True,
    data = [
        "//:test_models",
        "//cfg:optimizations",
    ],
)
